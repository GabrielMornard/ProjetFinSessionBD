@model IEnumerable<ProjetFinSessionBD.Models.Pilote>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nbvictoire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Points)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ecurie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nbvictoire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Points)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ecurie.EcurieId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PiloteId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PiloteId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PiloteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
