@model ProjetFinSessionBD.Models.ViewModel.TransactionViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Montant" class="control-label"></label>
                <input asp-for="Montant" class="form-control" />
                <span asp-validation-for="Montant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PiloteId" class="control-label"></label>
                <select asp-for="PiloteId" class="form-control">
                    <option value="">-- Sélectionner un pilote --</option>
                    @foreach (var pilote in ViewBag.Pilotes)
                    {
                        <option value="@pilote.PiloteId">@pilote.Nom</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="EcurieId" class="control-label"></label>
                <select asp-for="EcurieId" class="form-control">
                    <option value="">-- Sélectionner une écurie --</option>
                    @foreach (var ecurie in ViewBag.Ecuries)
                    {
                        <option value="@ecurie.EcurieId">@ecurie.Nom</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

