@model List<ProjetFinSessionBD.Models.TransactionsSimplifie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Ajouter une transaction</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Montant
            </th>
            <th>
                Ecurie
            </th>
            <th>
                Pilote
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Montant) $
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EcurieId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PiloteId)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.TransactionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TransactionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
