@model IEnumerable<ProjetFinSessionBD.Models.Ecurie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Victoire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sponsor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Victoire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sponsor.SponsorId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EcurieId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EcurieId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EcurieId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
